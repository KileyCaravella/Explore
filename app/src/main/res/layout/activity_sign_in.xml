<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:backgroundTint="#70FFFFFF"
    android:backgroundTintMode="src_over">

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="150dp"
        android:layout_marginTop="185dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@+id/usernameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="150dp"/>

    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signInButton"
        android:layout_below="@+id/passwordEditText"
        android:onClick="loginButtonPressed"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:elevation="1dp"/>


    <LinearLayout
        android:id="@+id/signInLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/signInButton"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp">

        <TextView
            android:id="@+id/createNewAccountTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Create New Account"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:onClick="signUpPressed" />

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Forgot Password"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:onClick="forgotPasswordPressed" />

    </LinearLayout>

    <View
        android:id="@+id/animationBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLoading"
        android:elevation="2dp"
        android:alpha="0.7"/>

    <ImageView
        android:id="@+id/animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="3dp"/>

</RelativeLayout>
