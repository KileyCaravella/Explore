<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/yelpImageView"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/main_part_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp">

        <View
            android:id="@+id/yelpBackgroundTitleView"
            android:layout_width="250dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:background="@color/common_google_signin_btn_text_dark_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yelpBusinessNameTextView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Business Name"
                android:textSize="@dimen/TitleName"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/openClosedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="CLOSED" />

            <Button
                android:id="@+id/yelpPhoneButton"
                android:layout_width="250dp"
                android:layout_height="22dp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal"
                android:stateListAnimator="@null"
                android:text="(860) 777-1234"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/yelpBusinessRatingImageView"
                        android:layout_width="125dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@mipmap/stars_large_0" />


                    <TextView
                        android:id="@+id/yelpNumberOfReviewsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="26 Ratings"
                        android:paddingBottom="5dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/yelpDistanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0.2 Miles"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_part_layout"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/yelp_burst"
        android:layout_toRightOf="@+id/yelp_burst"
        android:text="Yelp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/yelp_burst"
        android:layout_toRightOf="@+id/yelp_burst"
        android:text="Read more on Yelp"
        android:textSize="16sp" />

    <View
        android:id="@+id/yelp_link_marker"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/yelp_burst"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="?attr/colorButtonNormal" />

    <ImageView
        android:id="@+id/yelp_burst"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/yelp_link_marker"
        android:layout_alignStart="@+id/yelp_link_marker"
        app:srcCompat="@drawable/yelp_burst" />

    <ImageView
        android:id="@+id/google_maps_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/google_maps_logo"
        android:layout_alignTop="@+id/textView12"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yelp_link_marker"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/google_maps_image"
        android:text="Google Maps"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/google_maps_image"
        android:text="Get Directions to Location."
        android:textSize="16sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/forgetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget"
            android:height = "20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:height = "20dp"
            android:layout_weight="1"/>

    </LinearLayout>



</RelativeLayout>